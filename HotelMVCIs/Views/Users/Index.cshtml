@using HotelMVCIs.Models
@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Správa uživatelů";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Vytvořit nového uživatele</a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Jméno</th>
            <th>Email / Login</th>
            <th style="width: 15%">Akce</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (AppUser user in Model)
            {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Upravit</a>
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Smazat</button>
                                </form>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="4" class="text-center">Žádní uživatelé nebyli nalezeni.</td>
                </tr>
        }
    </tbody>
</table>