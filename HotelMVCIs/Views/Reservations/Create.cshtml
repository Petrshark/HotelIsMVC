@model HotelMVCIs.DTOs.ReservationDTO
@using HotelMVCIs.Models

@{
    ViewData["Title"] = "Nová rezervace";
}

<h1>@ViewData["Title"]</h1>
<h4 class="text-muted fw-light">Krok 1: Základní údaje</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="GuestId" class="control-label"></label>
                <select asp-for="GuestId" class="form-control" asp-items="@Model.GuestsList">
                    <option value="">-- Vyberte hosta --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="@Model.RoomsList">
                    <option value="">-- Vyberte pokoj --</option>
                </select>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group mb-3">
                        <label asp-for="CheckInDate" class="control-label"></label>
                        <input asp-for="CheckInDate" class="form-control" type="date" />
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                     <div class="form-group mb-3">
                        <label asp-for="CheckOutDate" class="control-label"></label>
                        <input asp-for="CheckOutDate" class="form-control" type="date" />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumberOfGuests" class="control-label"></label>
                <input asp-for="NumberOfGuests" class="form-control" type="number" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ReservationStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Uložit a pokračovat na služby" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}