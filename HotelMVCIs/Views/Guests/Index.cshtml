@model IEnumerable<HotelMVCIs.Models.Guest>

@{
    ViewData["Title"] = "Seznam hostů";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Přidat nového hosta</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Příjmení</th>
            <th>Jméno</th>
            <th>Email</th>
            <th>Město</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Upravit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Smazat</a>
                    </td>
                </tr>
        }
    </tbody>
</table>