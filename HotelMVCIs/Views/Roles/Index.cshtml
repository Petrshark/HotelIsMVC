@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Správa rolí";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Vytvořit novou roli</a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>ID Role</th>
            <th>Název role</th>
            <th style="width: 15%">Akce</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Upravit členy</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.Id">Smazat</a>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="3" class="text-center">Žádné role nebyly nalezeny.</td>
                </tr>
        }
    </tbody>
</table>